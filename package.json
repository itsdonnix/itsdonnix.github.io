  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "5.0.0",
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.14",
    "cssnano-preset-advanced": "^5.3.9",
    "nodemon": "^2.0.19",
    "pdf-lib": "^1.17.1",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "postcss-import": "15.0.0",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.7.1",
    "prettier-plugin-go-template": "^0.0.13",
    "puppeteer": "19.2.2",
    "tailwindcss": "3.2.4"
  },
  "scripts": {
    "generate-resume-pdf": "node ./scripts/generatePDF.js ./static/resume/index.html ./public/resume/resume.pdf 'Don Alfons Nisnoni's Resume'",
    "build": "hugo --minify && pnpm run build-css && pnpm run generate-resume-pdf",
    "build-css": "NODE_ENV=production postcss ./assets/css/main.css -o ./public/css/main.min.css",
    "dev": "nodemon -e 'html, css, js, md toml' -i public -x 'clear; hugo; postcss ./assets/css/main.css -o ./public/css/main.min.css'"
  }
